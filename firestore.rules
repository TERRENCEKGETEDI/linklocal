rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for authenticated users
    // This is a permissive rule for development - tighten for production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read access to posts for everyone (including unauthenticated users)
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to users for everyone (but sensitive data should be protected)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin users can read/write everything
    match /users/{userId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}